<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="Gradient1" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="Yellow" Offset="0.8" />
    </LinearGradientBrush>
    <Style x:Key="SuperButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Gradient1}"/>
        <Setter Property="FontSize" Value="20"/>

    </Style>


</ResourceDictionary>